<Window x:Class="KarenVision.Views.PublicidadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publicidad - Karen Vision" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Grid>
        <!-- Fondo de la publicidad -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF6B35" Offset="0"/>
                <GradientStop Color="#F7931E" Offset="0.5"/>
                <GradientStop Color="#FFD23F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Contenedor principal -->
        <Border Margin="50" 
                Background="White" 
                CornerRadius="20" 
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="315" ShadowDepth="10" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header de la publicidad -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="Â¡OFERTA ESPECIAL!" 
                              FontSize="48" 
                              FontWeight="Bold" 
                              Foreground="#FF6B35" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Productos y Servicios de Calidad" 
                              FontSize="24" 
                              Foreground="#666666" 
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Contenido publicitario con imÃ¡genes rotativas -->
                <Grid Grid.Row="1">
                    <!-- Imagen de publicidad (cambiarÃ¡ automÃ¡ticamente) -->
                    <Image x:Name="ImagenPublicidad" 
                           Stretch="Uniform" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           MaxHeight="450"
                           MaxWidth="700"
                           Margin="20">
                        <Image.Effect>
                            <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="8" Opacity="0.3"/>
                        </Image.Effect>
                    </Image>
                    
                    <!-- Overlay con informaciÃ³n adicional -->
                    <Border Background="#80000000" 
                            VerticalAlignment="Bottom" 
                            Margin="20,0,20,20"
                            CornerRadius="10"
                            Padding="15">
                        <StackPanel>
                            <!-- Indicadores de imagen actual -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,0,0,10">
                                <Ellipse x:Name="Indicator1" Width="12" Height="12" Fill="#FF6B35" Margin="3"/>
                                <Ellipse x:Name="Indicator2" Width="12" Height="12" Fill="#CCCCCC" Margin="3"/>
                                <Ellipse x:Name="Indicator3" Width="12" Height="12" Fill="#CCCCCC" Margin="3"/>
                                <Ellipse x:Name="Indicator4" Width="12" Height="12" Fill="#CCCCCC" Margin="3"/>
                                <Ellipse x:Name="Indicator5" Width="12" Height="12" Fill="#CCCCCC" Margin="3"/>
                            </StackPanel>
                            
                            <!-- InformaciÃ³n de imagen actual -->
                            <TextBlock x:Name="TxtImagenInfo" 
                                      Text="Imagen 1 de 5" 
                                      FontSize="14" 
                                      Foreground="White" 
                                      HorizontalAlignment="Center" 
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Mensaje animado opcional -->
                    <Border Background="#80FF6B35"
                            CornerRadius="20"
                            Padding="15,8"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top"
                            Margin="0,30,0,0">
                        <TextBlock x:Name="TxtMensajeAnimado" 
                                  Text="ðŸŽ‰ Â¡Descubre nuestras increÃ­bles ofertas! ðŸŽ‰" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center">
                            <TextBlock.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </Border>
                </Grid>

                <!-- Barra de progreso -->
                <StackPanel Grid.Row="2" Margin="0,30,0,20">
                    <TextBlock x:Name="TxtTiempoRestante" 
                              Text="Tiempo restante: 10 segundos" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Foreground="#666666" 
                              Margin="0,0,0,10"/>
                    
                    <ProgressBar x:Name="ProgressBarTiempo" 
                                Minimum="0" 
                                Maximum="100" 
                                Value="0" 
                                Height="8" 
                                Background="#E0E0E0" 
                                Foreground="#4CAF50"/>
                </StackPanel>

                <!-- Botones de acciÃ³n -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnSaltarPublicidad" 
                            Content="â­ Saltar (5s)" 
                            Style="{StaticResource SecondaryButton}"
                            IsEnabled="False"
                            Click="BtnSaltarPublicidad_Click"
                            Margin="10"/>
                    
                    <Button x:Name="BtnInteractuar" 
                            Content="ðŸ‘† Â¡Me Interesa!" 
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnInteractuar_Click"
                            Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contador en la esquina superior derecha -->
        <Border Background="Black" 
                CornerRadius="20" 
                Padding="15,5" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="20">
            <TextBlock x:Name="TxtContador" 
                      Text="10" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>