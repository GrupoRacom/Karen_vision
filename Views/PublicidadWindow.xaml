<Window x:Class="KarenVision.Views.PublicidadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Publicidad - Karen Vision" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Grid>
        <!-- Fondo de la publicidad -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF6B35" Offset="0"/>
                <GradientStop Color="#F7931E" Offset="0.5"/>
                <GradientStop Color="#FFD23F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Contenedor principal -->
        <Border Margin="50" 
                Background="White" 
                CornerRadius="20" 
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="315" ShadowDepth="10" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header de la publicidad -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="¡OFERTA ESPECIAL!" 
                              FontSize="48" 
                              FontWeight="Bold" 
                              Foreground="#FF6B35" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Productos y Servicios de Calidad" 
                              FontSize="24" 
                              Foreground="#666666" 
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Contenido publicitario -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Banner principal -->
                    <Border Background="#E3F2FD" 
                            CornerRadius="15" 
                            Padding="30" 
                            Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Imagen placeholder -->
                            <Border Background="#BBDEFB" 
                                    Width="150" 
                                    Height="150" 
                                    CornerRadius="10" 
                                    Margin="0,0,30,0">
                                <TextBlock Text="📱" 
                                          FontSize="72" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>

                            <!-- Contenido del anuncio -->
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Descubre Nuestros Productos" 
                                          FontSize="28" 
                                          FontWeight="Bold" 
                                          Foreground="#1976D2" 
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="✓ Calidad garantizada" 
                                          FontSize="18" 
                                          Margin="0,5"/>
                                <TextBlock Text="✓ Precios competitivos" 
                                          FontSize="18" 
                                          Margin="0,5"/>
                                <TextBlock Text="✓ Entrega rápida" 
                                          FontSize="18" 
                                          Margin="0,5"/>
                                <TextBlock Text="✓ Atención personalizada" 
                                          FontSize="18" 
                                          Margin="0,5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Mensaje animado -->
                    <TextBlock x:Name="TxtMensajeAnimado" 
                              Text="🎉 ¡No te pierdas nuestras increíbles ofertas! 🎉" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#FF5722" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,20">
                        <TextBlock.RenderTransform>
                            <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </StackPanel>

                <!-- Barra de progreso -->
                <StackPanel Grid.Row="2" Margin="0,30,0,20">
                    <TextBlock x:Name="TxtTiempoRestante" 
                              Text="Tiempo restante: 10 segundos" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center" 
                              Foreground="#666666" 
                              Margin="0,0,0,10"/>
                    
                    <ProgressBar x:Name="ProgressBarTiempo" 
                                Minimum="0" 
                                Maximum="100" 
                                Value="0" 
                                Height="8" 
                                Background="#E0E0E0" 
                                Foreground="#4CAF50"/>
                </StackPanel>

                <!-- Botones de acción -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnSaltarPublicidad" 
                            Content="⏭ Saltar (5s)" 
                            Style="{StaticResource SecondaryButton}"
                            IsEnabled="False"
                            Click="BtnSaltarPublicidad_Click"
                            Margin="10"/>
                    
                    <Button x:Name="BtnInteractuar" 
                            Content="👆 ¡Me Interesa!" 
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnInteractuar_Click"
                            Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contador en la esquina superior derecha -->
        <Border Background="Black" 
                CornerRadius="20" 
                Padding="15,5" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="20">
            <TextBlock x:Name="TxtContador" 
                      Text="10" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>